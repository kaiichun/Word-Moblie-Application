        <shape android:shape="line">
            <corners android:radius="@dimen/s" />
            <stroke android:width="0dp" android:color="@android:color/transparent" /> <!-- Remove any existing strokes -->
            <!-- Add bottom stroke only -->
            <stroke android:width="@dimen/xxxxs" android:color="@color/green"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="line">
            <corners android:radius="@dimen/s" />
